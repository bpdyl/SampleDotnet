@model MyProject.Models.Cars


<h1>Add Categories</h1>
<hr />
<form asp-action="AddCategory">
    <div class="border whitebg p-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-3">
                <h4><label asp-for="CarName" class="col-form-label"></label></h4>
            </div>
            <div class="col-5">
                <input asp-for="CarName" class="form-control" />
            </div>
            <span asp-validation-for="CarName" class="text-danger"></span>
        </div>
                <div class="row form-group">
            <div class="col-3">
                <h4><label asp-for="Description" class="col-form-label"></label></h4>
            </div>
            <div class="col-5">
                <input asp-for="Description" class="form-control" />
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row form-group">
            <div class="col-3">
                <h4><label asp-for="Price" class="col-form-label"></label></h4>
            </div>
            <div class="col-5">
                <input asp-for="Price" class="form-control" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3"></div>
            <div class="col-5">
                <div class="row">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-success form-control">Add New Car</button>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Index" class="btn btn-info form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>