@model MyProject.Models.Cars
<div class="row">
    <div class="col-md-6 col-sm-5">
        <h4>All Cars</h4>
    </div>
    <div class="col-md-6 col-sm-7">
        <a asp-action="AddCars" asp-controller="Car" class="btn btn-info float-right">Add Cars</a>
    </div>
</div>

<hr />

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border whitebg">
            <tr class="table-secondary">
                <th><label>Car Name</label></th>
                <th><label>Price</label></th>
                <th><label>Description</label></th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => car.CarName)</td>
                    <td>@Html.DisplayFor(m => car.Price)</td>
                    <td>@Html.DisplayFor(m => car.Description)</td>
                    <td class="text-right">
                        <a class="btn btn-warning text-white" asp-action="EditCars" asp-route-id="@car.CarId">Edit</a> |
                        <a class="btn btn-danger text-white" asp-action="DeleteCar" asp-route-id="@car.CarId">Delete</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <div class="container">
            <center>
                <h4 class="text-black-50 mt-5">Opps!! No Cars available right now. shall we add some?</h4>
            </center>
        </div>
    }
</div>